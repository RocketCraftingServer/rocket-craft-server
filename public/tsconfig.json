{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "module": "es2015",
    "jsx": "preserve",
    "declaration": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx", "src/components/IHeader.ts"
  ],
  "exclude": [
    "node_modules",
    "server",
    "public",
    "**/node_modules/**/*.*",
    "docs/**/*"
  ]
}
